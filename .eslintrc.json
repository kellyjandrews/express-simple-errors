{
  "parserOptions" : {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
      "node": true,
      "es6": true,
      "jest": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error","unix"],
    "quotes": ["error","single"],
    "semi": ["error","always"]
    }
}
